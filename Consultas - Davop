-- 1. Mostrar todos los productos ordenados de mayor a menor precio
SELECT
    codeProducto,          -- Código del producto
    nombreProducto,        -- Nombre del producto
    precioProducto,        -- Precio del producto
    stockProducto          -- Stock disponible
FROM
    Producto
ORDER BY
    precioProducto DESC;   -- Ordena del más caro al más barato
-- 2. Mostrar todos los clientes ordenados alfabéticamente por apellido
SELECT
    idCliente,             -- ID del cliente
    nombreCliente,         -- Nombre del cliente
    apellidoCliente,       -- Apellido del cliente
    telefonoCliente        -- Teléfono de contacto
FROM
    Cliente
ORDER BY
    apellidoCliente ASC;   -- Ordena de A a Z por apellido
-- 3. Mostrar todos los pedidos ordenados del más reciente al más antiguo
SELECT
    idPedido,              -- ID del pedido
    fechaPedido,           -- Fecha en que se realizó el pedido
    estadoPedido,          -- Estado actual del pedido (ej. entregado, pendiente)
    montoTotalPedido,      -- Monto total del pedido
    descripcionPedido      -- Detalles o notas adicionales
FROM
    Pedido
ORDER BY
    fechaPedido DESC;      -- Ordena del pedido más reciente al más antiguo
